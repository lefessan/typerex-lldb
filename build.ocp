begin rules "lldb-conf"
    build_rules = [
      "autoconf/config.ocpgen" (
        build_target = true
        sources = [
          "autoconf/config.ocpgen.in"
            "autoconf/configure"
            "configure"
                  ]
        commands = [ { "./configure" } ]
      )
    ]
end;

if include "autoconf/config.ocpgen" then {
  has_lldb = conf_has_lldb;
  ocamllib = conf_ocamllib;
  cxx = conf_cxx;
  lib_lldb = conf_lib_lldb;
  llvm_include = conf_llvm_include;
} else {
    has_lldb = true
    ocamllib = ""
    cxx = ""
    lib_lldb = ""
    llvm_include = "";
}
